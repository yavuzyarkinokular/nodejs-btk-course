extends ../layouts/main-layout.pug 
block content 

    if(action !=='undefined' && action === 'edit' )
        div.alert.alert-succes The product has been uploaded 
    if(action !=='undefined' && action === 'deleted' )
        div.alert.alert-danger The product has been deleted 
    if products.length > 0 
        table.table-bordered
            thead
                tr 
                    th Image    
                    th Product Name    
                    th Price    
                    th 
            tbody
                each product in products
                    tr  
                        td
                            img(src=`/img/${product.imageUrl}`,width='200px')
                        td #{product.name}
                        td #{product.price} TL 
                        td  
                            a.btn.btn-primary.btn-sm(href=`/admin/products/${product.id}`) Edit

                            form(action='/admin/delete-product' method='POST')
                                input(type='hidden' name='productid' value=`${product.id}`)
                                button(type='submit').btn.btn-danger.mt-3 Delete

    else 
        h1 No Products 