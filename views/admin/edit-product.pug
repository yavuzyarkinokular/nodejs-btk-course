extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content     
    form(action="/admin/products" method="POST")
        input(type='hidden' name='id' value = `${product.id}`)

        .form-group.row
            label(for="name").col-sm-2.col-form-label Name
            .col-sm-10
                input.form-control#name(type="text" name="name" value = `${product.name}`)  
        .form-group.row
            label(for="price").col-sm-2.col-form-label Price
            .col-sm-10
                input.form-control#price(type="text" name="price" value = `${product.price}`)  
        .form-group.row
            label(for="imageUrl").col-sm-2.col-form-label Image
            .col-sm-10
                input.form-control#imageUrl(type="text" name="imageUrl" value = `${product.imageUrl}`)  
        .form-group.row
            label(for="description").col-sm-2.col-form-label Description
        .col-sm-10
            textarea.form-control(rows='10' cols='30' name="description") #{product.description}

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save").btn.btn-primary
        
                  

