extends layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content     
    form(action="/admin/add-product" method="POST")
        .form-group.row
            label(for="productName").col-sm-2.col-form-label Name
            .col-sm-10
                input.form-control#name(type="text" name="name")  
        .form-group.row
            label(for="productName").col-sm-2.col-form-label Price
            .col-sm-10
                input.form-control#price(type="text" name="price")  
        .form-group.row
            label(for="productName").col-sm-2.col-form-label Image
            .col-sm-10
                input.form-control#image(type="text" name="image")  
        .form-group.row
            label(for="productName").col-sm-2.col-form-label Description
            .col-sm-10
                input.form-control#description(type="text" name="description")  
        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary   

